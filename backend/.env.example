# Azure Translator
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com
AZURE_TRANSLATOR_KEY=
AZURE_TRANSLATOR_REGION=
# Optional. Set after you publish a Custom Translator model.
AZURE_TRANSLATOR_CATEGORY=

# Optional OpenAI post-editing (Azure-only still works)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Default language settings (overridable per request)
TRANSLATION_FROM=en
TRANSLATION_TO=pt-br

# PostgreSQL
POSTGRES_DSN=postgresql://postgres:postgres@localhost:5432/postgres

# /translate/db source
SOURCE_TABLE=source_texts
SOURCE_ID_COLUMN=id
SOURCE_TEXT_COLUMN=source_text

# /translate/db target
TARGET_TABLE=translated_texts
TARGET_ID_COLUMN=id
TARGET_TEXT_COLUMN=translated_text

# Cache table
CACHE_TABLE=translation_cache
